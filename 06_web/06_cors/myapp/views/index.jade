block content
  h1= title
  p Welcome to #{title}

  script.
    // Simple Request
    fetch('http://localhost:3000/text', {
      method: 'POST',
      headers: {
        'Content-Type': 'text/plain',
      },
      body: 'foo',
    })
    .then(res => res.text())
    .then(data => {
      console.log(data);
    });
    // Simple Request
    fetch('https://optimal-bee-feasible.ngrok-free.app/text', {
